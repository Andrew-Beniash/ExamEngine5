<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ds="clr-namespace:ExamEngine.DesignSystem.Controls"
             x:Class="ExamEngine.Features.Dashboard.HomePage"
             Title="Home">
  <ScrollView>
    <Grid ColumnDefinitions="*"
          RowDefinitions="Auto,Auto"
          RowSpacing="12">
      <!-- Recent Attempt Card -->
      <ds:Card Grid.Row="0" CardPadding="{StaticResource Space.L}" Elevation="8">
        <VerticalStackLayout Spacing="8">
          <Label Style="{StaticResource Text.Title}" Text="{Binding Greeting}" />
          <Label Text="No attempts yet. Start practicing!" />
        </VerticalStackLayout>
      </ds:Card>

      <!-- Topics Card -->
      <ds:Card Grid.Row="1" CardPadding="{StaticResource Space.L}" Elevation="8">
        <VerticalStackLayout Spacing="8">
          <Label Style="{StaticResource Text.Title}" Text="Topics" />
          <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="8" RowSpacing="4">
            <Label Grid.Row="0" Grid.Column="0" Text="•" />
            <Label Grid.Row="0" Grid.Column="1" Text="Topic A (0%)" />
            <Label Grid.Row="1" Grid.Column="0" Text="•" />
            <Label Grid.Row="1" Grid.Column="1" Text="Topic B (0%)" />
          </Grid>
        </VerticalStackLayout>
      </ds:Card>
    </Grid>
  </ScrollView>
</ContentPage>
