             xmlns:ds="clr-namespace:ExamEngine.DesignSystem.Controls"
             x:Class="ExamEngine.Features.Home.HomePage"
             Title="Home">
  <ScrollView>
    <VerticalStackLayout Spacing="12">
      <ds:Card CardPadding="{StaticResource Space.L}" Elevation="8">
