<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:home="clr-namespace:ExamEngine.Features.Home"
    xmlns:practice="clr-namespace:ExamEngine.Features.Practice"
    x:Class="ExamEngine.AppShell">
    <TabBar>
        <ShellContent Title="Home" Route="home" ContentTemplate="{DataTemplate home:HomePage}" />
        <ShellContent Title="Practice" Route="practice" ContentTemplate="{DataTemplate practice:PracticePage}" />
    </TabBar>
</Shell>
