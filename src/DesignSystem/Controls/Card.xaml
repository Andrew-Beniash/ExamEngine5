<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamEngine.DesignSystem.Controls.Card"
             x:Name="Root">
  <Border x:Name="CardBorder"
          BackgroundColor="{StaticResource Color.Surface}"
          StrokeThickness="0"
          Padding="{Binding Source={x:Reference Root}, Path=CardPadding}">
    <Border.StrokeShape>
      <RoundRectangle x:Name="CardShape"
                      CornerRadius="{Binding Source={x:Reference Root}, Path=CornerRadius}" />
    </Border.StrokeShape>
    <Border.Shadow>
      <Shadow x:Name="CardShadow"
              Brush="Black"
              Opacity="0.25"
              Radius="8"
              Offset="0,2" />
    </Border.Shadow>
    <ContentPresenter />
  </Border>
</ContentView>

